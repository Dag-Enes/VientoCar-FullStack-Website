<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Profili | Viento Car</title>
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css">

    <style>
        /* GENEL AYARLAR */
        body {
            background: linear-gradient(135deg, #050d1f 0%, #0a1e4a 100%);
            color: #ffffff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }

        /* HEADER */
        header {
            background: linear-gradient(135deg, #0a1e4a 0%, #0c2960 100%);
            padding: 1rem 0;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        nav {
            max-width: 1200px; margin: 0 auto; display: flex;
            justify-content: space-between; align-items: center; padding: 0 2rem;
        }

        .logo {
            font-size: 1.8rem; font-weight: bold; color: #FFD700;
            text-decoration: none; display: flex; align-items: center; gap: 0.5rem;
        }
        .logo span { color: white; }

        .btn-secondary {
            background: transparent; border: 1px solid #FFD700; color: #FFD700;
            padding: 0.5rem 1rem; border-radius: 20px; text-decoration: none;
            transition: 0.3s; font-size: 0.9rem;
        }
        .btn-secondary:hover { background: rgba(255, 215, 0, 0.1); }

        /* PROFİL ALANI */
        .profile-main { flex: 1; padding: 2rem; display: flex; justify-content: center; }
        .profile-container { width: 100%; max-width: 900px; }
        .profile-title { text-align: center; color: #FFD700; margin-bottom: 2rem; }

        /* SEKMELER */
        .profile-tabs {
            display: flex; gap: 1rem; margin-bottom: 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            overflow-x: auto; justify-content: center;
        }
        .tab-btn {
            background: none; border: none; color: #b0b8c9; padding: 1rem;
            font-size: 1.1rem; cursor: pointer; border-bottom: 3px solid transparent;
            transition: all 0.3s; white-space: nowrap;
        }
        .tab-btn:hover { color: white; }
        .tab-btn.active { color: #FFD700; border-bottom-color: #FFD700; }

        /* İÇERİK */
        .profile-content { display: none; animation: fadeIn 0.3s; }
        .profile-content.active { display: block; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        .profile-card {
            background: #1a2d52; padding: 2rem; border-radius: 20px;
            border: 1px solid rgba(255, 215, 0, 0.2);
            max-width: 500px; margin: 0 auto;
        }
        .profile-card.wide { max-width: 100%; }

        .profile-avatar {
            width: 100px; height: 100px; border-radius: 50%; display: block;
            margin: 0 auto 1.5rem; border: 3px solid #FFD700; object-fit: cover;
        }

        .info-group {
            margin-bottom: 1rem; display: flex; justify-content: space-between;
            align-items: center; border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            padding-bottom: 0.5rem;
        }
        .info-group label { color: #b0b8c9; font-weight: 600; }
        .rating { color: #FFD700; }

        /* BUTONLAR & INPUTLAR */
        .btn-primary {
            width: 100%; padding: 0.8rem; background: #FFD700; border: none;
            border-radius: 10px; color: #0a1e4a; font-weight: bold; cursor: pointer;
            margin-top: 1rem; transition: 0.3s;
        }
        .btn-primary:hover { background: #FDB931; transform: translateY(-2px); }
        .edit-buttons { display: flex; gap: 10px; margin-top: 1rem; }
        input {
            background: #0f1d3a; border: 1px solid rgba(255, 215, 0, 0.2);
            color: white; padding: 8px 10px; border-radius: 5px; width: 60%;
        }
        input:focus { outline: none; border-color: #FFD700; }

        /* TABLO */
        .custom-table { width: 100%; border-collapse: collapse; color: #e0e0e0; }
        .custom-table th { text-align: left; padding: 12px; border-bottom: 2px solid #FFD700; color: #ffffff; }
        .custom-table td { padding: 12px; border-bottom: 1px solid rgba(255,255,255,0.1); }
        .custom-table tr:hover { background-color: rgba(255,255,255,0.05); }

        /* FOOTER */
        footer {
            margin-top: auto; background: #0a1e4a; color: white;
            padding: 2rem 1rem; text-align: center; border-top: 1px solid rgba(255, 215, 0, 0.1);
        }
        footer p { color: #b0b8c9; }

        /* KALDIR BUTONU STİLİ */
        .btn-remove-photo {
            position: absolute; 
            top: 0; 
            right: -10px; 
            background: #ff4d4d; 
            border: 2px solid #1a2d52; 
            border-radius: 50%; 
            width: 28px; 
            height: 28px; 
            cursor: pointer; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            color: white; 
            transition: 0.2s;
            z-index: 10;
        }
        .btn-remove-photo:hover { background: #cc0000; transform: scale(1.1); }
    </style>
</head>
<body>
    <header>
        <nav>
            <a href="/index" class="logo"><span>Viento</span> Car</a>
            <div class="nav-buttons">
                <a href="/klonSayfa" class="btn btn-secondary">Yolculuk Ara / Ekle</a>
                <a href="/cikis" class="btn btn-secondary" style="border-color: #ff4d4d; color: #ff4d4d; margin-left: 10px;">Çıkış Yap</a>
            </div>
        </nav>
    </header>

    <main class="profile-main">
        <div class="profile-container">
            <h1 class="profile-title">Hoş Geldin, <%= kullanici.ad_soyad %></h1>
            
            <div class="profile-tabs">
                <button class="tab-btn active" onclick="profilBolumunuGoster('bilgiler')">Profil Bilgileri</button>
                <button class="tab-btn" onclick="profilBolumunuGoster('yolculuklar')">Yolculuklarım</button>
                <button class="tab-btn" onclick="profilBolumunuGoster('degerlendirmeler')">Değerlendirmeler</button>
                <button class="tab-btn" onclick="profilBolumunuGoster('ayarlar')">Ayarlar</button>
            </div>

            <div id="bilgiler" class="profile-content active">
                <div class="profile-card">
                    
                    <div style="position: relative; width: 100px; margin: 0 auto 1.5rem;">
                        <img src="<%= kullanici.profil_foto && kullanici.profil_foto !== 'default.png' ? '/uploads/' + kullanici.profil_foto : '/images2/user (1).png' %>" 
                             alt="Profil Fotoğrafı" 
                             class="profile-avatar"
                             style="width: 100px; height: 100px; object-fit: cover; border-radius: 50%;">
                        
                        <button onclick="document.getElementById('fotoInput').click()" 
                                style="position: absolute; bottom: 0; right: 0; background: #FFD700; border: none; border-radius: 50%; width: 30px; height: 30px; cursor: pointer; display: flex; align-items: center; justify-content: center; box-shadow: 0 2px 5px rgba(0,0,0,0.5);">
                            <i class="bi bi-camera-fill" style="color: #0a1e4a; font-size: 16px;"></i>
                        </button>

                        <% if (kullanici.profil_foto && kullanici.profil_foto !== 'default.png') { %>
                        <button class="btn-remove-photo" onclick="fotoKaldir()" title="Fotoğrafı Kaldır">
                            <i class="bi bi-x-lg" style="font-size: 14px;"></i>
                        </button>
                        <% } %>
                    </div>
            
                    <form id="fotoForm" action="/foto-yukle" method="POST" enctype="multipart/form-data" style="display: none;">
                        <input type="file" id="fotoInput" name="profil_foto" accept="image/*" onchange="document.getElementById('fotoForm').submit()">
                    </form>
            
                    <div class="info-group"><label>Ad Soyad:</label><span><%= kullanici.ad_soyad %></span></div>
                    <div class="info-group"><label>E-posta:</label><span><%= kullanici.email %></span></div>
                    <div class="info-group"><label>Telefon:</label><span><%= kullanici.telefon || 'Belirtilmemiş' %></span></div>
                    <div class="info-group"><label>Puan:</label><span class="rating">⭐️ <%= kullanici.puan || 5.0 %> / 5</span></div>
                    
                    <button class="btn-primary" id="duzenle-btn">Profili Düzenle</button>
            
                    <div id="duzenleme-formu" style="display: none; margin-top: 1rem;">
                        <div class="info-group"><label>Ad Soyad:</label><input type="text" id="yeni-ad" value="<%= kullanici.ad_soyad %>"></div>
                        <div class="info-group"><label>E-posta:</label><input type="email" id="yeni-eposta" value="<%= kullanici.email %>"></div>
                        <div class="info-group"><label>Telefon:</label><input type="text" id="yeni-telefon" value="<%= kullanici.telefon %>"></div>
                        <div class="edit-buttons">
                            <button class="btn-primary" onclick="kaydet()">Kaydet</button>
                            <button class="btn-secondary" onclick="iptal()">İptal</button>
                        </div>
                    </div>
                </div>
            </div>

            <div id="yolculuklar" class="profile-content">
                <div class="profile-card wide mb-4">
                    <h2 class="text-center" style="color: #ffffff;">Satın Aldığım Biletler</h2>
                    <div class="table-responsive">
                        <table class="custom-table">
                            <thead><tr><th>Tarih</th><th>Güzergah</th><th>Sürücü</th><th>Durum</th><th>İşlem</th></tr></thead>
                            <tbody>
                                <% if(!gecmisYolculuklar || gecmisYolculuklar.length === 0) { %>
                                    <tr><td colspan="5" class="text-center">Henüz bilet aldığınız bir yolculuk yok.</td></tr>
                                <% } else { %>
                                    <% gecmisYolculuklar.forEach(y => { %>
                                    <tr>
                                        <td><%= new Date(y.tarih).toLocaleDateString('tr-TR') %></td>
                                        <td><%= y.nereden %> > <%= y.nereye %></td>
                                        <td><%= y.surucu_adi %></td>
                                        <td>
                                            <% if(y.odeme_durumu === 'tamamlandi') { %> <span class="badge bg-success">Ödendi</span>
                                            <% } else { %> <span class="badge bg-warning text-dark">Bekleniyor</span> <% } %>
                                        </td>
                                        <td>
                                            <% if(y.odeme_durumu === 'tamamlandi') { %>
                                                <% if(y.puanlandi_mi > 0) { %> <span style="color:#FFD700"><i class="bi bi-check-circle-fill"></i> Puanlandı</span>
                                                <% } else { %> <button class="btn btn-sm btn-outline-warning" onclick="puanModalAc('<%= y.rezervasyon_id %>', '<%= y.yolculuk_id %>', '<%= y.surucu_id %>', '<%= y.surucu_adi %>')"><i class="bi bi-star"></i> Puanla</button> <% } %>
                                            <% } else { %> <span class="text-muted">-</span> <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="profile-card wide">
                    <h2 class="text-center" style="color: #ffffff;">Yayınladığım İlanlar</h2>
                    <div class="table-responsive">
                        <table class="custom-table">
                            <thead>
                                <tr style="border-bottom-color: #ffffff !important;">
                                    <th style="color: #ffffff;">Tarih</th>
                                    <th style="color: #ffffff;">Güzergah</th>
                                    <th style="color: #ffffff;">Kalan</th>
                                    <th style="color: #ffffff;">Durum</th>
                                    <th style="color: #ffffff;">Yolcular</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(!ilanlarim || ilanlarim.length === 0) { %>
                                    <tr><td colspan="5" class="text-center">Henüz eklediğiniz bir ilan yok.</td></tr>
                                <% } else { %>
                                    <% ilanlarim.forEach(ilan => { %>
                                    <tr>
                                        <td><%= new Date(ilan.tarih).toLocaleDateString('tr-TR') %></td>
                                        <td><%= ilan.nereden %> > <%= ilan.nereye %></td>
                                        <td><%= ilan.bos_koltuk %></td>
                                        <td>
                                            <% if(ilan.durum === 'aktif' && ilan.bos_koltuk > 0) { %>
                                                <span class="badge bg-primary">Yayında</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Doldu/Pasif</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" onclick="yolculariGoster('<%= ilan.id %>')">
                                                <i class="bi bi-people-fill"></i> Listeyi Gör
                                            </button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div id="degerlendirmeler" class="profile-content">
                <div class="profile-card">
                    <h2 class="text-center" style="color: #ffffff;">Değerlendirmelerim</h2>
                    <% if(!locals.gelenYorumlar || locals.gelenYorumlar.length === 0) { %>
                        <div class="text-center p-3" style="border: 1px dashed rgba(255,255,255,0.2); border-radius: 10px;">
                            Henüz hiç değerlendirme almadınız.
                        </div>
                    <% } else { %>
                        <div style="display: flex; flex-direction: column; gap: 1rem;">
                            <% locals.gelenYorumlar.forEach(y => { %>
                                <div style="background: rgba(255, 255, 255, 0.05); padding: 1rem; border-radius: 10px; border-left: 3px solid #FFD700;">
                                    <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                                        <strong style="color: #FFD700;"><%= y.yorum_yapan %></strong>
                                        <span style="color: #FFD700;">
                                            <% for(let i=0; i<y.puan; i++) { %>★<% } %>
                                        </span>
                                    </div>
                                    <p style="margin: 0; color: #ffffff; font-style: italic;">"<%= y.yorum || 'Yorum yok' %>"</p>
                                    <div style="text-align: right; font-size: 0.8rem; color: #e0e0e0; margin-top: 0.5rem;">
                                        <%= new Date(y.tarih).toLocaleDateString('tr-TR') %>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </div>

            <div id="ayarlar" class="profile-content">
                <div class="profile-card">
                    <h2 class="text-center" style="color: #ffffff;">Hesap Ayarları</h2>
                    <form>
                        <div class="info-group" style="display:block;">
                            <label style="display:block; margin-bottom:10px;">Yeni Şifre</label>
                            <input type="password" placeholder="Yeni Şifreniz" style="width:100%;">
                        </div>
                        <button class="btn-primary">Şifreyi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <div class="modal fade" id="puanModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="background: #1a2d52; color: white; border: 1px solid #D4AF37;">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Sürücüyü Puanla</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <h4 id="modalSurucuAdi" style="color:#FFD700; margin-bottom:1rem;">-</h4>
                    <p>Yolculuğunuz nasıldı?</p>
                    <div class="stars mb-3" style="font-size: 2rem; cursor: pointer;">
                        <i class="bi bi-star star-item" data-value="1" onclick="yildizSec(1)"></i>
                        <i class="bi bi-star star-item" data-value="2" onclick="yildizSec(2)"></i>
                        <i class="bi bi-star star-item" data-value="3" onclick="yildizSec(3)"></i>
                        <i class="bi bi-star star-item" data-value="4" onclick="yildizSec(4)"></i>
                        <i class="bi bi-star star-item" data-value="5" onclick="yildizSec(5)"></i>
                    </div>
                    <textarea id="puanYorum" class="form-control bg-dark text-white border-secondary mb-3" rows="3" placeholder="Yorumunuz (İsteğe bağlı)..."></textarea>
                    <input type="hidden" id="hiddenRezId"><input type="hidden" id="hiddenYolculukId"><input type="hidden" id="hiddenSurucuId"><input type="hidden" id="secilenPuan" value="0">
                    <button onclick="puanGonder()" class="btn-primary w-100">Gönder</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="yolcuModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="background: #1a2d52; color: white; border: 1px solid #0d6efd;">
                <div class="modal-header border-0">
                    <h5 class="modal-title text-primary">Yolcu Listesi</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="yolcuListesiIcerik">
                        <p class="text-center text-muted">Yükleniyor...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer><p>&copy; 2025 Viento Car. Tüm hakları saklıdır.</p></footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        function profilBolumunuGoster(bolumId) {
            document.querySelectorAll('.profile-content').forEach(i => i.classList.remove('active'));
            document.querySelectorAll('.profile-tabs .tab-btn').forEach(b => b.classList.remove('active'));
            document.getElementById(bolumId).classList.add('active');
            
            // Sekme butonlarını güncelle
            document.querySelectorAll('.profile-tabs .tab-btn').forEach(btn => {
                if(btn.getAttribute('onclick').includes(bolumId)) {
                    btn.classList.add('active');
                }
            });
        }

        const duzenleBtn = document.getElementById('duzenle-btn');
        const duzenlemeFormu = document.getElementById('duzenleme-formu');
        duzenleBtn.addEventListener('click', () => { duzenleBtn.style.display = 'none'; duzenlemeFormu.style.display = 'block'; });
        function iptal() { duzenleBtn.style.display = 'block'; duzenlemeFormu.style.display = 'none'; }

        function kaydet() {
            fetch('/profil-guncelle', {
                method: 'POST', headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ ad_soyad: document.getElementById('yeni-ad').value, email: document.getElementById('yeni-eposta').value, telefon: document.getElementById('yeni-telefon').value }),
            }).then(r => r.json()).then(d => { alert("✅ " + d.mesaj); location.reload(); }).catch(e => alert('Hata oluştu.'));
        }

        // FOTOĞRAFI KALDIR FONKSİYONU
        function fotoKaldir() {
            if (confirm('Profil fotoğrafınızı kaldırmak istediğinize emin misiniz?')) {
                fetch('/foto-sil', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload(); 
                    } else {
                        alert('Hata: ' + data.message);
                    }
                })
                .catch(err => alert("Bir hata oluştu!"));
            }
        }

        // Puanlama Fonksiyonları
        function puanModalAc(r, y, s, a) {
            document.getElementById('hiddenRezId').value = r; document.getElementById('hiddenYolculukId').value = y;
            document.getElementById('hiddenSurucuId').value = s; document.getElementById('modalSurucuAdi').innerText = a;
            yildizSec(0); new bootstrap.Modal(document.getElementById('puanModal')).show();
        }

        function yildizSec(p) {
            document.getElementById('secilenPuan').value = p;
            document.querySelectorAll('.star-item').forEach((y, i) => {
                if (i < p) { y.classList.remove('bi-star'); y.classList.add('bi-star-fill'); y.style.color = '#FFD700'; }
                else { y.classList.remove('bi-star-fill'); y.classList.add('bi-star'); y.style.color = 'white'; }
            });
        }

        function puanGonder() {
            const p = document.getElementById('secilenPuan').value;
            if(p == 0) { alert('Lütfen yıldız seçin!'); return; }
            fetch('/puan-ver', {
                method: 'POST', headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({
                    rezervasyonId: document.getElementById('hiddenRezId').value, yolculukId: document.getElementById('hiddenYolculukId').value,
                    surucuId: document.getElementById('hiddenSurucuId').value, puan: p, yorum: document.getElementById('puanYorum').value
                })
            }).then(r => r.json()).then(d => {
                if(d.durum === 'basarili') { alert('✅ Puan kaydedildi.'); location.reload(); } else { alert('❌ ' + d.mesaj); }
            }).catch(e => alert("Hata!"));
        }

        function yolculariGoster(ilanId) {
            const modalBody = document.getElementById('yolcuListesiIcerik');
            modalBody.innerHTML = '<p class="text-center">Yükleniyor...</p>'; 
            var myModal = new bootstrap.Modal(document.getElementById('yolcuModal'));
            myModal.show();
            fetch('/yolcular/' + ilanId)
            .then(res => res.json())
            .then(data => {
                if (data.length === 0) {
                    modalBody.innerHTML = '<div class="alert alert-info" style="color: #0a1e4a;">Henüz bu ilana bilet alan kimse yok.</div>';
                } else {
                    let html = '<ul class="list-group list-group-flush bg-transparent">';
                    data.forEach(yolcu => {
                        html += `<li class="list-group-item bg-transparent text-white border-bottom border-secondary"><div class="d-flex justify-content-between align-items-center"><div><strong>${yolcu.ad_soyad}</strong> <br><small class="text-muted"> ${yolcu.telefon || 'No Yok'}</small></div><span class="badge bg-warning text-dark">${yolcu.koltuk_sayisi} Koltuk</span></div></li>`;
                    });
                    html += '</ul>';
                    modalBody.innerHTML = html;
                }
            }).catch(err => { modalBody.innerHTML = '<p class="text-danger text-center">Hata oluştu.</p>'; });
        }
    </script>
</body>
</html>