                koltuk: 4,
                arac: "Renault Megane 2018 Gri",
                bagaj: "K√º√ß√ºk",
                muzik: false,
                sigara: false
            }
        ];

        let filtreliYolculuklar = [];

        // URL parametrelerini al
        function urlParamAl() {
            const urlParams = new URLSearchParams(window.location.search);
            return {
                nereden: urlParams.get('nereden') || '',
                nereye: urlParams.get('nereye') || '',
                tarih: urlParams.get('tarih') || ''
            };
        }

        // Yolculuklarƒ± filtrele
        function yolculuklariFiltrele() {
            const params = urlParamAl();
            
            filtreliYolculuklar = tumYolculuklar.filter(yolculuk => {
                let eslesme = true;
                
                if (params.nereden && !yolculuk.nereden.toLowerCase().includes(params.nereden.toLowerCase())) {
                    eslesme = false;
                }
                
                if (params.nereye && !yolculuk.nereye.toLowerCase().includes(params.nereye.toLowerCase())) {
                    eslesme = false;
                }
                
                if (params.tarih && yolculuk.tarih !== params.tarih) {
                    eslesme = false;
                }
                
                return eslesme;
            });

            return filtreliYolculuklar;
        }

        // Ba≈ülƒ±k g√ºncelle
        function baslikGuncelle() {
            const params = urlParamAl();
            const baslik = document.getElementById('guzergah-baslik');
            const tarihBilgi = document.getElementById('tarih-bilgi');
            
            if (params.nereden && params.nereye) {
                baslik.textContent = `${params.nereden} ‚Üí ${params.nereye}`;
            }
            
            if (params.tarih) {
                const tarihObj = new Date(params.tarih);
                const gunler = ['Pazar', 'Pazartesi', 'Salƒ±', '√áar≈üamba', 'Per≈üembe', 'Cuma', 'Cumartesi'];
                const aylar = ['Ocak', '≈ûubat', 'Mart', 'Nisan', 'Mayƒ±s', 'Haziran', 'Temmuz', 'Aƒüustos', 'Eyl√ºl', 'Ekim', 'Kasƒ±m', 'Aralƒ±k'];
                
                tarihBilgi.textContent = `${gunler[tarihObj.getDay()]}, ${tarihObj.getDate()} ${aylar[tarihObj.getMonth()]} ${tarihObj.getFullYear()}`;
            }
        }

        // Yolculuk kartƒ± olu≈ütur
        function yolculukKartiOlustur(yolculuk) {
            const isimBas = yolculuk.surucu.split(' ').map(k => k[0]).join('');
            
            return `
                <div class="yolculuk-kart">
                    <div class="yolculuk-ust">
                        <div class="surucu-bilgi">
                            <div class="surucu-avatar">${isimBas}</div>
                            <div class="surucu-detay">
                                <h3>${yolculuk.surucu}</h3>
                                <div class="surucu-puan">‚≠ê ${yolculuk.puan} ¬∑ ${Math.floor(Math.random() * 50 + 10)} yolculuk</div>
                            </div>
                        </div>
                        <div class="fiyat-bilgi">
                            <div class="fiyat">${yolculuk.fiyat}‚Ç∫</div>
                            <div class="fiyat-aciklama">ki≈üi ba≈üƒ±</div>
                        </div>
                    </div>

                    <div class="yolculuk-guzergah">
                        <div>
                            <div class="konum-bilgi">${yolculuk.nereden}</div>
                            <div class="saat-bilgi">${yolculuk.saat}</div>
                        </div>
                        <div class="konum-cizgi"></div>
                        <div>
                            <div class="konum-bilgi">${yolculuk.nereye}</div>
                            <div class="saat-bilgi">~${hesaplaSure(yolculuk.saat)}</div>
                        </div>
                    </div>

                    <div class="yolculuk-detaylar">
                        <div class="detay-oge">ü™ë ${yolculuk.koltuk} bo≈ü koltuk</div>
                        <div class="detay-oge">üß≥ ${yolculuk.bagaj} bagaj</div>
                        ${yolculuk.muzik ? '<div class="detay-oge">üéµ M√ºzik</div>' : ''}
                        ${!yolculuk.sigara ? '<div class="detay-oge">üö≠ Sigara yok</div>' : ''}
                    </div>

                    <div class="arac-bilgi">
                        üöó ${yolculuk.arac}
                    </div>

                    <button class="btn-rezervasyon" onclick="rezervasyonYap(${yolculuk.id})">
                        Rezervasyon Yap
                    </button>
                </div>
            `;
        }

        // Varƒ±≈ü saati hesapla (√∂rnek)
        function hesaplaSure(baslangicSaat) {
            const [saat, dakika] = baslangicSaat.split(':');
            const yeniSaat = (parseInt(saat) + 4) % 24;
            return `${yeniSaat.toString().padStart(2, '0')}:${dakika}`;
        }

        // Yolculuklarƒ± listele
        function yolculuklariListele(yolculuklar) {
            const liste = document.getElementById('yolculuk-listesi');
            const sonucSayisi = document.getElementById('sonuc-sayisi');
            
            sonucSayisi.textContent = yolculuklar.length;
            
            if (yolculuklar.length === 0) {
                liste.innerHTML = `
                    <div class="sonuc-yok">
                        <div class="sonuc-yok-ikon">üîç</div>
                        <h2>√úzg√ºn√ºz, yolculuk bulunamadƒ±</h2>
                        <p>Arama kriterlerinizi deƒüi≈ütirerek tekrar deneyebilirsiniz.</p>
                        <a href="index.html" class="btn btn-primary" style="margin-top: 1rem;">Yeni Arama Yap</a>
                    </div>
                `;
            } else {
                liste.innerHTML = yolculuklar.map(yolculukKartiOlustur).join('');
            }
        }

        // Sƒ±ralama
        function sirala() {
            const siralama = document.getElementById('siralama').value;
            
            if (siralama === 'ucuz') {
                filtreliYolculuklar.sort((a, b) => a.fiyat - b.fiyat);
            } else if (siralama === 'erken') {
                filtreliYolculuklar.sort((a, b) => a.saat.localeCompare(b.saat));
            } else if (siralama === 'puan') {
                filtreliYolculuklar.sort((a, b) => b.puan - a.puan);
            }
            
            yolculuklariListele(filtreliYolculuklar);
        }

        // Fiyat filtresi
        function fiyatFiltrele() {
            const maxFiyat = document.getElementById('fiyat-filtre').value;
            document.getElementById('fiyat-deger').textContent = maxFiyat;
            
            const filtrelenmis = yolculuklariFiltrele().filter(y => y.fiyat <= maxFiyat);
            yolculuklariListele(filtrelenmis);
        }

        // Rezervasyon yap
        function rezervasyonYap(yolculukId) {
            alert(`Yolculuk #${yolculukId} i√ßin rezervasyon i≈ülemi ba≈ülatƒ±lƒ±yor...\n\nGiri≈ü yapmanƒ±z gerekmektedir.`);
            window.location.href = 'giri≈ü.html';
        }

        // Sayfa y√ºklendiƒüinde
        window.addEventListener('DOMContentLoaded', function() {
            baslikGuncelle();
            const sonuclar = yolculuklariFiltrele();
            yolculuklariListele(sonuclar);
        });

