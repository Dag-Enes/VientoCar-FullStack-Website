    <!-- ===== YOLCULUK EKLEME FORMU ===== -->
    <section class="form-section py-5">
        <div class="container">
            <!-- İlerleme Çubuğu -->
            <div class="progress-container mb-5">
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar bg-warning" id="progressBar" role="progressbar" style="width: 0%"></div>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <div class="progress-step active" data-step="1">
                        <div class="step-circle"><i class="bi bi-geo-alt-fill"></i></div>
                        <small class="step-text">Güzergah</small>
                    </div>
                    <div class="progress-step" data-step="2">
                        <div class="step-circle"><i class="bi bi-info-circle-fill"></i></div>
                        <small class="step-text">Detaylar</small>
                    </div>
                    <div class="progress-step" data-step="3">
                        <div class="step-circle"><i class="bi bi-car-front-fill"></i></div>
                        <small class="step-text">Araç</small>
                    </div>
                    <div class="progress-step" data-step="4">
                        <div class="step-circle"><i class="bi bi-check-circle-fill"></i></div>
                        <small class="step-text">Tamamla</small>
                    </div>
                </div>
            </div>

            <!-- Form Kartı -->
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card shadow-lg border-0">
                        <div class="card-body p-4 p-md-5">
                            <form id="journeyForm">
                                <!-- ADIM 1: Güzergah Bilgileri -->
                                <div class="form-step active" data-step="1">
                                    <div class="step-header mb-4">
                                        <span class="badge bg-primary mb-2">Adım 1/4</span>
                                        <h3 class="mb-2"><i class="bi bi-geo-alt me-2"></i>Güzergah Bilgileri</h3>
                                        <p class="text-muted">Kalkış ve varış noktalarınızı belirleyin</p>
                                    </div>

                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Kalkış Noktası *</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-geo-fill text-success"></i></span>
                                                <input type="text" class="form-control form-control-lg" id="kalkis" placeholder="Örn: İstanbul" required>
                                            </div>
                                            <div class="form-text">Şehir veya ilçe adı</div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Varış Noktası *</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-geo-fill text-danger"></i></span>
                                                <input type="text" class="form-control form-control-lg" id="varis" placeholder="Örn: Ankara" required>
                                            </div>
                                            <div class="form-text">Şehir veya ilçe adı</div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Tarih *</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                                <input type="date" class="form-control form-control-lg" id="tarih" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Kalkış Saati *</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-clock"></i></span>
                                                <input type="time" class="form-control form-control-lg" id="saat" required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end mt-4">
                                        <button type="button" class="btn btn-primary btn-lg px-5" onclick="nextStep()">
                                            Devam Et <i class="bi bi-arrow-right ms-2"></i>
                                        </button>
                                    </div>
                                </div>

                                <!-- ADIM 2: Yolculuk Detayları -->
                                <div class="form-step" data-step="2">
                                    <div class="step-header mb-4">
                                        <span class="badge bg-primary mb-2">Adım 2/4</span>
                                        <h3 class="mb-2"><i class="bi bi-info-circle me-2"></i>Yolculuk Detayları</h3>
                                        <p class="text-muted">Koltuk sayısı ve fiyat bilgilerini girin</p>
                                    </div>

                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Boş Koltuk Sayısı *</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-people"></i></span>
                                                <select class="form-select form-select-lg" id="yolcu" required>
                                                    <option value="">Seçiniz</option>
                                                    <option value="1">1 Koltuk</option>
                                                    <option value="2">2 Koltuk</option>
                                                    <option value="3">3 Koltuk</option>
                                                    <option value="4">4 Koltuk</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Koltuk Başı Fiyat (₺) *</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-currency-exchange"></i></span>
                                                <input type="number" class="form-control form-control-lg" id="fiyat" placeholder="150" min="0" required>
                                                <span class="input-group-text">₺</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-4">
                                        <label class="form-label fw-bold">Tercihler</label>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="form-check form-check-custom">
                                                    <input class="form-check-input" type="checkbox" name="tercih" value="sigara" id="check1">
                                                    <label class="form-check-label" for="check1">
                                                        <i class="bi bi-slash-circle text-danger me-2"></i>Sigara içilmez
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-check form-check-custom">
                                                    <input class="form-check-input" type="checkbox" name="tercih" value="evcil" id="check2">
                                                    <label class="form-check-label" for="check2">
                                                        <i class="bi bi-x-circle text-danger me-2"></i>Evcil hayvan kabul edilmez
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-check form-check-custom">
                                                    <input class="form-check-input" type="checkbox" name="tercih" value="muzik" id="check3">
                                                    <label class="form-check-label" for="check3">
                                                        <i class="bi bi-music-note-beamed text-success me-2"></i>Müzik dinlenebilir
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-check form-check-custom">
                                                    <input class="form-check-input" type="checkbox" name="tercih" value="konusma" id="check4">
                                                    <label class="form-check-label" for="check4">
                                                        <i class="bi bi-volume-mute text-primary me-2"></i>Sessiz yolculuk tercih ederim
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between mt-4">
                                        <button type="button" class="btn btn-outline-secondary btn-lg px-4" onclick="prevStep()">
                                            <i class="bi bi-arrow-left me-2"></i>Geri
                                        </button>
                                        <button type="button" class="btn btn-primary btn-lg px-5" onclick="nextStep()">
                                            Devam Et <i class="bi bi-arrow-right ms-2"></i>
                                        </button>
                                    </div>
                                </div>

                                <!-- ADIM 3: Araç Bilgileri -->
                                <div class="form-step" data-step="3">
                                    <div class="step-header mb-4">
                                        <span class="badge bg-primary mb-2">Adım 3/4</span>
                                        <h3 class="mb-2"><i class="bi bi-car-front me-2"></i>Araç Bilgileri</h3>
                                        <p class="text-muted">Aracınızın detaylarını girin</p>
                                    </div>

                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Araç Markası *</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-car-front-fill"></i></span>
                                                <input type="text" class="form-control form-control-lg" id="marka" placeholder="Örn: Toyota" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Araç Modeli *</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-card-heading"></i></span>
                                                <input type="text" class="form-control form-control-lg" id="model" placeholder="Örn: Corolla" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Araç Rengi</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-palette"></i></span>
                                                <input type="text" class="form-control form-control-lg" id="renk" placeholder="Örn: Beyaz">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Plaka (Son 2 hane)</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-123"></i></span>
                                                <input type="text" class="form-control form-control-lg" id="plaka" placeholder="Örn: 34" maxlength="2">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between mt-4">
                                        <button type="button" class="btn btn-outline-secondary btn-lg px-4" onclick="prevStep()">
                                            <i class="bi bi-arrow-left me-2"></i>Geri
                                        </button>
                                        <button type="button" class="btn btn-primary btn-lg px-5" onclick="nextStep()">
                                            Devam Et <i class="bi bi-arrow-right ms-2"></i>
                                        </button>
                                    </div>
                                </div>

                                <!-- ADIM 4: Ek Bilgiler -->
                                <div class="form-step" data-step="4">
                                    <div class="step-header mb-4">
                                        <span class="badge bg-primary mb-2">Adım 4/4</span>
                                        <h3 class="mb-2"><i class="bi bi-check-circle me-2"></i>Ek Bilgiler</h3>
                                        <p class="text-muted">Yolculukla ilgili ek detayları ekleyin</p>
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label fw-bold">Yolculuk Açıklaması</label>
                                        <textarea class="form-control" id="aciklama" rows="5" placeholder="Yolculukla ilgili eklemek istediğiniz detayları buraya yazabilirsiniz...&#10;&#10;• Ara duraklar&#10;• Bagaj kapasitesi&#10;• Diğer özel notlar"></textarea>
                                        <div class="form-text">Ara durak, bagaj kapasitesi gibi bilgileri ekleyebilirsiniz</div>
                                    </div>

                                    <div class="alert alert-info d-flex align-items-center" role="alert">
                                        <i class="bi bi-info-circle-fill me-3 fs-4"></i>
                                        <div>
                                            <strong>Bilgilendirme:</strong> Yolculuğunuzu yayınladıktan sonra düzenleyebilir veya iptal edebilirsiniz.
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between mt-4">
                                        <button type="button" class="btn btn-outline-secondary btn-lg px-4" onclick="prevStep()">
                                            <i class="bi bi-arrow-left me-2"></i>Geri
                                        </button>
                                        <button type="submit" class="btn btn-success btn-lg px-5">
                                            <i class="bi bi-check-circle me-2"></i>Yolculuğu Yayınla
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

